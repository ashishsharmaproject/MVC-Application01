
@{
    ViewBag.Title = "RegistrationForm";
}

<h2>RegistrationForm</h2>
<table>
    <tr>
        <td>Name:</td>
        <td><input type="text" id="txtname" /></td>
    </tr>

    <tr>
        <td>City:</td>
        <td><input type="text" id="txtcity" /></td>
    </tr>

    <tr>
        <td>Age:</td>
        <td><input type="text" id="txtage" /></td>
    </tr>

    <tr>
        <td></td>
        <td><input type="button" id="btnsave" value="Save" style="background-color:red;color:white" onclick="validation()"/>
            <input type="button" id="btnreset" value="Reset" style="background-color:blue;color:white" onclick="Reset()" /></td>
    </tr>
</table>

<table id="tbl" border="1" style="background-color:darkslategray;color:white;width:800px">
    <tr style="background-color:red">
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>City</th>
        <th>Age</th>
        <th></th>
        <th></th>
    </tr>
</table>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    function validation() {
        var validMsg = "";
        if ($("#txtname").val() == "") {
            validMsg += "Plaese Enter Name \n";
        }
        if ($("#txtcity").val() == "") {
            validMsg += "Plaese Enter City \n";
        }
        if ($("#txtage").val() == "") {
            validMsg += "Plaese Enter Age \n";
        }
        if (validMsg == "") {
            SAVE();
        }
        else {
            alert(validMsg);
        }
    }

    //--------------------------------------------Validation End-----------------------------------------

    var idbox = 0;


    function Reset() {
        $("#txtname").val("");
        $("#txtcity").val("");
        $("#txtage").val("");
        $("#btnsave").val("Save");
        idbox = 0;
    }

    $(document).ready(function () {
        Show();
    });

    function SAVE() {
        if ($("#btnsave").val() == "Save") {
            Insert();
        }
        else if ($("#btnsave").val() == "Update"){
            Update();
        }
    }

    function Insert() {
        $.ajax({
            url: 'UserRegistration/insert_oparation',
            type: 'post',
            data: { Name: $("#txtname").val(), City: $("#txtcity").val(), Age: $("#txtage").val() },
            success: function () {
                alert('Data Saved Successfully...!');
                Show();
                Reset();
            },
            error: function () {
                alert('Something went wrong. Data not Saved..!');
            }
        });
    };

    function Update() {
        $.ajax({
            url: 'UserRegistration/update_oparation',
            type: 'post',
            data: { UID: idbox, Name: $("#txtname").val(), City: $("#txtcity").val(), Age: $("#txtage").val() },
            success: function () {
                alert('Data Updated Successfully...!');
                $("#btnsave").val("Save");
                Show();
                Reset();
            },
            error: function () {
                alert('Something went wrong. Data can\'t Update..!');
            }
        });
    };

    function DELETE(uid) {
        if (confirm("Are you sure you want to delete this record..?")) {
            $.ajax({
                url: 'UserRegistration/delete_oparation',
                type: 'post',
                data: { UID: uid },
                success: function () {
                    alert('Data Deleted Successfully...!');
                    Show();
                },
                error: function () {
                    alert('Something went wrong. Data can\'t Delete..!');
                }
            });
        }
    };

    function EDIT(uid) {
        $.ajax({
            url: 'UserRegistration/edit_oparation',
            type: 'post',
            data: { UID: uid },
            success: function (data) {
                data = JSON.parse(data);
                $("#txtname").val(data[0].name);
                $("#txtcity").val(data[0].city);
                $("#txtage").val(data[0].age);
                $("#btnsave").val("Update");
                idbox = uid;
            },
            error: function () {
                alert('Something went wrong. Data can\'t Edit..!');
            }
        });
    };

    

    function Show() {
        $.ajax({
            url: 'UserRegistration/Display_oparation',
            type: 'post',
            data: {},
            success: function (data) {
                data = JSON.parse(data);
                $("#tbl").find("tr:gt(0)").remove();
                for (var i = 0; i < data.length; i++) {
                    $("#tbl").append('<tr><td>' + data[i].uid + '</td> <td>' + data[i].name + '</td> <td>' + data[i].city + '</td> <td>' + data[i].age + '</td> <td><input type="button" id="btndelete" value="Delete" onclick="DELETE(' + data[i].uid + ')"/></td> <td><input type="button" id="btnedit" value="Edit" onclick="EDIT(' + data[i].uid + ')"/></td> <tr>')
                }
            },
            error: function () {
                alert('Something went wrong. Data not Found..!');
            }
        });
    };

</script>
